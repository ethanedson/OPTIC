{
  "manifest_version": 3,
  "name": "Optic - Webcam Control and Optimization",
  "version": "1.0",
  "description": "A Chrome extension to tune and set the parameters of cameras in Windows",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}
