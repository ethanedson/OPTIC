{
  "manifest_version": 3,
  "name": "OPTIC - Webcam Control and Optimization",
  "version": "1.0.1",
  "description": "An extension to control and configure hardware settings of webcams from Chrome on Windows",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}
